@model IEnumerable<FA.FlowerShop.Core.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Category manage</h2>

<p>
    <a href="@Url.Action("Create")"><button class="btn btn-success"><i class="fa fa-plus">Add new</i></button></a>
</p>
<div class="table-responsive">
    <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Order)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        <form action="@Url.Action("Delete", "Categories", new {id = item.CategoryId})">

                            <a href="@Url.Action("Edit", "Categories", new {id = item.CategoryId})" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Details","Categories", new {id = item.CategoryId})" class="btn btn-info">
                                <i class="fa fa-info-circle"></i>
                            </a>
                            <button type="submit" onclick="return confirm('Are you sure to delete this post?');" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>